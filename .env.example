# AI Backend Configuration
# The base URL for the AI API proxy.
AI_BASE_URL="https://ai.seo-kim.com/ai"
NEXT_PUBLIC_AI_BASE_URL="https://ai.seo-kim.com"

# AI Service Token (Bearer)
AI_TOKEN="your_ai_service_token"

# AI Model Settings
AI_EMBED_MODEL_ID="gemini-embedding-001"
AI_CHECK_MODEL="gemini-2.0-flash-exp"

# Fallback Gemini API Keys (Direct access if proxy is not used)
GOOGLE_GEMINI_API="your_google_gemini_api_key"
GEMINI_API_KEY="your_gemini_api_key"

# Security & Proxy Authentication
# AI_PROXY_SECRET is used to authorize requests to /api/ai routes.
# If not set, it will fall back to the SECRET variable.
AI_PROXY_SECRET="your_proxy_secret_here"
SECRET="your_general_app_secret_here"

# Application Access Control
# A SHA-256 hash of the password used in the PasswordGate.
# Example for 'password123': 8549a21a0ae3c2595e3736d2f90ac96ec0d2a390d6eacac74fa2c6ae1c40ea4f
APP_GUARD_HASH="your_password_hash_here"
NEXT_PUBLIC_APP_GUARD_HASH="your_password_hash_here"

# Debugging & Testing
# SKIP_AI_CHECK=1 to bypass verify-ai script during builds.
SKIP_AI_CHECK=0
